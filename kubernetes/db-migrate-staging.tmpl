apiVersion: batch/v1
kind: Job
metadata:
  name: __JOB_NAME__
spec:
  template:
    spec:
      containers:
      - name: tove-db-migrate-staging
        image: zooniverse/tove:__IMAGE_TAG__
        command: ["bundle",  "exec", "rails", "db:migrate"]
        env:
        - name: RAILS_LOG_TO_STDOUT
          value: "true"
        - name: RAILS_ENV
          value: staging
        - name: RAILS_MASTER_KEY
          valueFrom:
            secretKeyRef:
              name: tove-staging
              key: rails-master-key
      restartPolicy: Never
  backoffLimit: 1
